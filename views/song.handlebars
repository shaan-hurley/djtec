<div class="jumbotron">
    <div class="container">
        <h1>Node.js & Spotify</h1>
        <p>An example web application that demonstrates how to use Spotify with Node.js</p>
    </div>
</div>
<form action="/" method="post" role="form" enctype="application/x-www-form-urlencoded">
    <legend>Spotify Query</legend>

    <div class="form-group">
        <label for="param_type">Type</label>
        <input type="text" class="form-control" name="param_type" id="param_type" placeholder="track">
    </div>

    <div class="form-group">
        <label for="param_query">Query</label>
        <input type="text" class="form-control" name="param_query" id="param_query" placeholder="Swing Life Away">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
{{#if results}}
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Artist</th>
            <th>Song</th>
            <th>Preview Link</th>
            <th>Album</th>
        </tr>
        </thead>
        <tbody>
        {{#each results}}
            <tr>
                <td>{{artist}}</td>
                <td>{{song}}</td>
                <td><a href="{{preview}}">{{preview}}</a></td>
                <td>{{album}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>
{{/if}}