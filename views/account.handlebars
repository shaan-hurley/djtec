<div class="mui-row">
    <div class="mui-col-md-2"  style="padding:25px">
        <div class="card" style="background: transparent">
            <div class="card-body" style="color:white">
                <img class="card-img-top" src="{{ passport.photos }}" style=" max-wdith: 50%; border-radius: 50%;" alt="User Profile">
                <h4 class="card-title" style="text-align:center">{{ passport.id }}</h4>
                <h6 class="card-subtitle mb-2 text-muted"><a href="{{ passport.profileUrl }}">{{ passort.profileUrl }}</a></h6>
                
            </div>
        </div>
        <div class="card" style="background: transparent">
            <div class="card-body" style="color:white">
                <h4 class="card-title">Playlists</h4>
                <input type="hidden" name="user_token1" id="user_token1" value="{{ user.spotifyToken }}">
                 <input type="hidden" name="user_token2" id="user_token2" value="{{ user.spotifyToken }}">
                <div class="container">
                    <div id="result" data-test="blahblah">

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="mui-col-md-4">
         <div class="card" style="background: transparent">
            <div class="card-body" style="color:white">
                <h4 class="card-title" >Songs</h4>
                <input type="hidden" name="user_token1" id="user_token1" value="{{ user.spotifyToken }}">
                 <input type="hidden" name="user_token2" id="user_token2" value="{{ user.spotifyToken }}">
                <div class="container" id="song-result">
                        <ul class="songs">

                        </ul>
                </div>
            </div>
        </div>
    </div> 

<div class="wrapper">
    <div class="scroll-list__wrp js-scroll-content js-scroll-list">
        <div class="scroll-list__item js-scroll-list-item">
            <a href="https://codepen.io/MarioDesigns/">
                <img src="https://upload.wikimedia.org/wikipedia/en/thumb/9/97/Ready_To_Die.jpg/220px-Ready_To_Die.jpg" alt="Skytsunami" />
            </a>
            <div class="song">
                <p>Song: Headlines</p>
                <p>Artist: Drake</p>
                <p>Album: Take Care</p>
            </div>
        </div>
    </div>
</div>

    <div class="mui-col-md-4 float-right">
       <div class="card" style="background: transparent">
            <div class="card-body" style="color:white">
                <h4 class="card-title" >User Requests</h4>
                {{#if user.request}}
                {{#each newfriend}}
                <li style="border-bottom: 1px solid lightgray">
                        <div>
                        <h4>{{this.username}}</h4>
                        </div>
                        <div>
                            <div style="width: 50%; display: inline;">
                            <input type="hidden" name="senderId" id="senderId" value="{{this.userId}}">
                            <input type="hidden" name="senderName" id="senderName" value="{{this.username}}">
                            <button type="submit" id="accept_friend" class="btn btn-primary" style="width: 8em">Accept</button>
                            </div>
                            <div style="width: 50%;  display: inline;">
                                <input type="hidden" name="user_Id" id="user_Id" value="{{this.userId}}">
                            <button type="submit" id="cancel_friend" class="btn btn-primary" style="width: 8em">Cancel</button>
                            </div>
                        </div>    
                </li>
                {{/each}}
                {{else}}
            <h4 >No requests</h4>
            {{/if}}
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-sm-8 col-sm-offset-2">
        <ul>
            {{#each friends}}
                <li class="list-group-item">
                    <div class="lead"><a href="/friends/{{this.friendId}}">{{this.friendName}}</a></div>
                </li>
            {{/each}}
        </ul>
    </div>
</div>






